@page "/cars"
@rendermode InteractiveServer
@using Database.Models
@using Layout
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<BlazorApp1.Database.ApplicationDbContext> DbFactory

<h3>Список автомобилей</h3>
<table class="table">
    <thead>
        <tr>
            <th>Марка</th>
            <th>Модель</th>
            <th>Стоимость аренды(за минуту использования)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in DbFactory.CreateDbContextAsync().Result.Cars)
        {
            <tr>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@($"{car.PricePerMinute} руб.")</td>
            </tr>
        }
    </tbody>
</table>

